+def toutf8(txt, strlen = 0):
+  if not txt:
+    return txt
+  c = chardet.detect( txt)
+  try:
+    u = unicode( txt, c['encoding'])
+    return u.encode('utf-8')
+  except UnicodeError:
+    pass
+  except TypeError:
+    pass
+  return txt
